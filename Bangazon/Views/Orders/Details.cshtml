@model Bangazon.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1>My Cart</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FirstName)
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt class="col-sm-2">
            Items in Cart
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>
                            Product
                        </th>
                        <th>
                            Price
                        </th>
                        <th>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.OrderProducts)
                    {
                        if (product.Product.Active == true)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => product.Product.Title)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => product.Product.Price)
                            </td>
                            <td>
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </dd>
        <dt>
            Total: $@Model.OrderProducts.Where(i => i.Product.Active == true).Sum(i => i.Product.Price)<br /><br />
            <input type="submit" value="Cancel Order" class="btn btn-outline-danger" />
            <input type="submit" value="Complete Order" class="btn btn-outline-success" />
        </dt>
    </dl>
</div>
<div>
    <a asp-action="Index">View All Orders</a>
</div>
